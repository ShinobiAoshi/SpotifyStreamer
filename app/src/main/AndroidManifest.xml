<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.spotify.sdliles.spotifystreamer">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <service
                android:name=".Service.MediaPlayerService"
                android:exported="false"
                android:stopWithTask="true">
            <intent-filter>
                <action android:name="com.spotify.sdliles.spotifystreamer.action.PREVIOUS"/>
                <action android:name="com.spotify.sdliles.spotifystreamer.action.TOGGLE_PLAYBACK"/>
                <action android:name="com.spotify.sdliles.spotifystreamer.action.FOWARD"/>
            </intent-filter>
        </service>

        <activity
                android:name=".UI.MainActivity"
                android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".UI.TopTracksActivity"
                android:label="Top Tracks"
                android:parentActivityName=".UI.MainActivity"/>
        <activity
                android:name=".UI.PlayerActivity"
                android:label="Player"
                android:parentActivityName=".UI.TopTracksActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.spotify.sdliles.spotifystreamer.UI.TopTracksActivity"/>
        </activity>
    </application>

</manifest>
